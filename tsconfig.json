{
  "extends": "@cashbound-id/compiler/tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": false,
    "importHelpers": false,
    "declaration": false,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "eslint.config.mjs",
    "eslint.pre-commit.config.mjs",
    "jest.config.cjs",
    "rollup.config.cjs"
  ]
}
