{
  "extends": "@cashbound-id/compiler/tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": false,
    "importHelpers": false,
    "jsx": "react-jsx",
    "noEmitHelpers": false,
    "noImplicitReturns": false,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src"],
  "exclude": [
    "src/**/__tests__/*.test.*",
    "src/setup-test.*"
  ]
}
